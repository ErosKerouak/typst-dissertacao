// --- Estilos tipográficos gerais da dissertação ---


#set page(
  // Margens acadêmicas típicas (padrão ABNT)
  margin: (
    top: 3cm,      // Margem superior
    bottom: 2.5cm, // Margem inferior
    left: 3cm,     // Margem esquerda (encadernação)
    right: 2cm     // Margem direita
  ),

  // Numeração automática no rodapé 
  numbering: "1/1"
)

// Estilo do corpo do texto
#set text(
    font: "Liberation Serif", 
    size: 12pt
    )

#set par(
  justify: true,
)

#set heading(numbering: "1.")
